# Environment variables for SenangKira Docker setup
# Copy this file to .env and update values for your environment

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Configuration
DB_PASSWORD=your-secure-database-password

# Superuser Configuration (created automatically on first run)
SUPERUSER_USERNAME=admin
SUPERUSER_EMAIL=admin@yourdomain.com
SUPERUSER_PASSWORD=your-admin-password

# Email Configuration (for reminders)
EMAIL_HOST_USER=your-email@smtp-provider.com
EMAIL_HOST_PASSWORD=your-email-password

# Celery Flower Monitoring (optional)
FLOWER_USER=admin
FLOWER_PASSWORD=flower-monitoring-password

# SSL Certificate paths (for production with HTTPS)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Performance Tuning
GUNICORN_WORKERS=4
CELERY_CONCURRENCY=4
REDIS_MAXMEMORY=512mb

# Logging Level
LOG_LEVEL=INFO